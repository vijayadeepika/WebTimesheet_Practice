@model webtimesheet_Practice.models.LoginViewModel
    @using CaptchaMvc.HtmlHelpers;
@{ 
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml" ;
}

<style>

</style>
@using (Html.BeginForm())
{
    <div class="login-panel">
        @if(ViewBag.errormessage!=null)
        {
            <p class="alert alert-danger" id="successmessage">@ViewBag.errormessage</p>
        }
    </div>
    <div class="form-group">
        <div class="col-md-12 col-xs-12">
            <h3>Login</h3>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12 col-xs-12">
                @Html.LabelFor(model => Model.Username)
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @maxlength = 20 })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 col-xs-12">
                @Html.LabelFor(model => Model.Password)
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @maxlength = 30 })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 col-xs-12">
                <div id="captcha" class="captcha">
                  @Html.Label("captcha")
                    @Html.Captcha("Refresh","Ebter the text You see above",5,"<span class='text-danger'>Enter the captcha</span>",true)

                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <input id="submit" class="btn-btn-success" type="submit" value="sign in to account"
            </div>
        </div>
    </div>
}

